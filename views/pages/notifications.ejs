<!DOCTYPE html>
<html>
  <title>Shape</title>
  <link rel="icon" href="/assets/shape-tab-icon.png" type="image/png" />
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
  <link
    rel="stylesheet"
    href="https://fonts.googleapis.com/css?family=Roboto"
  />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
  />
  <link rel="stylesheet" href="/css/notifications.css" />

  <body>
    <% if(userType == "trainee" ) { %> <%- include('../partials/traineeSidebar')
    %> <% } %> <% if(userType == "trainer" ) { %> <%-
    include('../partials/sidebar') %> <% } %>

    <section id="content">
      <%- include('../partials/navbar') %>
      <div class="container">
        <div class="avatar-flip">
          <img
            src="/assets/bellPic.png"
            height="150"
            width="150"
            style="cursor: zoom-in"
            id="pic1"
          />
          <img
            src="/assets/bellPic.png"
            height="150"
            width="150"
            style="cursor: zoom-in"
            id="pic2"
          />
        </div>
        <!-- <h2>Bar Sela</h2> -->
        <h2>Notifications</h2>
        <label id="empty" hidden>You don't have notifications yet</label>
        <!-- <div class="btn-group"></div> -->
        <% if(empty !="true" ) { %> <% if(userType =="trainee" ) { %> <%
        notificationObjList.forEach(n=> { %>
        <div class="card-body text-center">
          <div
            class="card-body text-center"
            style="
              background-color: rgb(194, 194, 194);
              padding-bottom: 20px;
              border-radius: 20%;
            "
          >
            <h3 class="mb-1">
              <a class="text-dark" style="text-decoration: underline"
                >Cancelation:</a
              ><br />
              <a class="text-dark"
                >Trainer canceled training you were registered for</a
              ><br />
              <a class="text-dark"
                ><strong>Training Type:</strong> <%= n.trainingType %> </a
              ><br />
              <a class="text-dark"
                ><strong>Training Date:</strong> <%= n.trainingDate %> </a
              ><br />
              <a class="text-dark"
                ><strong>Start Hour:</strong> <%= n.startHour %> </a
              ><br />
              <a class="text-dark"
                ><strong>Trainer Name:</strong> <%= n.trainerName %>
              </a>
            </h3>
          </div>
        </div>
        <% }); %> <% } %> <% } %> <% if(empty !="true" ) { %> <% if(userType
        =="trainer" ) { %> <% notificationObjList.forEach(n=> { %>
        <div class="card-body text-center">
          <div
            class="card-body text-center"
            style="
              background-color: rgb(194, 194, 194);
              padding-bottom: 20px;
              border-radius: 20%;
            "
          >
            <h3 class="mb-1">
              <a class="text-dark" style="text-decoration: underline"
                >Cancelation:</a
              ><br />
              <a class="text-dark"
                >Trainee canceled a training he were registered </a
              ><br />
              <a class="text-dark"
                ><strong>Training Type:</strong> <%= n.trainingType %> </a
              ><br />
              <a class="text-dark"
                ><strong>Training Date:</strong> <%= n.trainingDate %> </a
              ><br />
              <a class="text-dark"
                ><strong>Start Hour:</strong> <%= n.startHour %> </a
              ><br />
            </h3>
          </div>
        </div>
        <% }); %> <% } %> <% } %>
      </div>
    </section>
    <script>
      console.log(typeof "<%=empty%>");
      if ("<%=empty%>" == "true") {
        document.getElementById("empty").style.display = "block";
      }
    </script>
  </body>
</html>
