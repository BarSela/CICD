  <body>
    <% if(userType == "trainee" ) { %> <%- include('../partials/traineeSidebar')
    %> <% } %> <% if(userType == "trainer" ) { %> <%-
    include('../partials/sidebar') %> <% } %>

    <section id="content">
      <%- include('../partials/navbar') %>
      <div class="container">
        <div class="avatar-flip">
          <img
            src="/assets/you_can.jpg"
            height="150"
            width="150"
            style="cursor: zoom-in"
            id="pic1"
          />
          <img
            src="/assets/you_can.jpg"
            height="150"
            width="150"
            style="cursor: zoom-in"
            id="pic2"
          />
        </div>
        <!-- <h2>Bar Sela</h2> -->
        <h2>Statistics</h2>
        <div class="btn-group"></div>
        <canvas id="myChart"></canvas>
        <div class="profile-details"></div>
      </div>
    </section>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>

    <script>
            let fullData='<%=fullData%>';
            const ctx = document.getElementById("myChart").getContext("2d");
            const myChart = new Chart(ctx, {
              type: "bar",
              data: {
                labels: ["January","February","March","April","May","June","July","August","September","October","November","December"],
                datasets: [
                  {
                    label: "# of Votes",
                    data: [12, 19, 3, 5, 0, 3],
                    backgroundColor: [
                      "rgba(255, 99, 132, 0.2)",
                      "rgba(54, 162, 235, 0.2)",
                      "rgba(255, 206, 86, 0.2)",
                      "rgba(75, 192, 192, 0.2)",
                      "rgba(153, 102, 255, 0.2)",
                      "rgba(255, 159, 64, 0.2)",
                    ],
                    borderColor: [
                      "rgba(255, 99, 132, 1)",
                      "rgba(54, 162, 235, 1)",
                      "rgba(255, 206, 86, 1)",
                      "rgba(75, 192, 192, 1)",
                      "rgba(153, 102, 255, 1)",
                      "rgba(255, 159, 64, 1)",
                    ],
                    borderWidth: 1,
                  },
                ],
              },
              options: {
                scales: {
                  y: {
                    beginAtZero: true,
                  },
                },
              },
            });
    </script>
  </body>
