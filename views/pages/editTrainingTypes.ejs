    <script>

if('<%= user.hebrew %>' != '0')
      {
        var hebrewV='<%= user.hebrew %>'+'%';
        document.getElementById('hebrew-w').style.width=hebrewV;
      }
      else
      {
        document.getElementById('hebrew').style.display='none';
        document.getElementById('hebrew-t').style.display='none';
      }
      if('<%= user.english %>' != '0')
      {
        var englishV='<%= user.english %>'+'%';
      document.getElementById('english-w').style.width=englishV;
      }
      else{
        document.getElementById('english').style.display='none';
        document.getElementById('english-t').style.display='none';
      }
      if('<%= user.spanish %>' != '0')
      {
        var spanishV='<%= user.spanish %>'+'%';
      document.getElementById('spanish-w').style.width=spanishV;
      }
      else{
        document.getElementById('spanish').style.display='none';
        document.getElementById('spanish-t').style.display='none';
      }
      if('<%= user.russian %>' != '0')
      {
        var russianV='<%= user.russian %>'+'%';
      document.getElementById('russian-w').style.width=russianV;
      }
      else
      {
        document.getElementById('russian').style.display='none';
        document.getElementById('russian-t').style.display='none';
      }
      if('<%= user.arabic %>' != '0')
      {
        var arabicV='<%= user.arabic %>'+'%';
      document.getElementById('arabic-w').style.width=arabicV;
      }
      else{
        document.getElementById('arabic').style.display='none';
        document.getElementById('arabic-t').style.display='none';
      }  
      //training type1
      var trainingType1=document.getElementById("training-name-1");
      var duration1=document.getElementById("duration-type-1");
      var price1=document.getElementById("price-type-1");
      
        
      //training type2
      var trainingTypeName2=document.getElementById("training-name-2");
      var duration2=document.getElementById("duration-type-2");
      var price2=document.getElementById("price-type-2");
      
      
      //training type3
      var trainingTypeName3=document.getElementById("training-name-3");
      var duration3=document.getElementById("duration-type-3");
      var price3=document.getElementById("price-type-3");
      
      
      //training type4
      var trainingTypeName4=document.getElementById("training-name-4");
      var duration4=document.getElementById("duration-type-4");
      var price4=document.getElementById("price-type-4");
      
      //plus to add training type button
      var TrainingTypebt=document.getElementById("addTrainingTypebt");

      console.log('1');
      console.log('<%= user.trainingTypes[0].name %>');
      console.log('<%= user.trainingTypes[1] %>');
      //let name1='<%= user.trainingTypes[0].name %>';
      //document.getElementById("training-name-1").valueL=name1;
          //document.getElementById("duration-type-2").setAttribute("required","");
          //document.getElementById("price-type-2").setAttribute("required","");

      if('<%= user.trainingTypes[1] %>')
      {
        document.getElementById("training-type-2").style.display="block";
          document.getElementById("training-name-2").setAttribute("required","");
          document.getElementById("duration-type-2").setAttribute("required","");
          document.getElementById("price-type-2").setAttribute("required","");
      }
      if('<%= user.trainingTypes[2] %>')
      {
        document.getElementById("training-type-3").style.display="block";
          document.getElementById("training-name-3").setAttribute("required","");
          document.getElementById("duration-type-3").setAttribute("required","");
          document.getElementById("price-type-3").setAttribute("required","");
      }
      if('<%= user.trainingTypes[3] %>')
      {
        document.getElementById("training-type-4").style.display="block";
          document.getElementById("training-name-4").setAttribute("required","");
          document.getElementById("duration-type-4").setAttribute("required","");
          document.getElementById("price-type-4").setAttribute("required","");
      }
      //add or remove training type functions
      function addTrainingType(){
        
        if(document.getElementById("training-type-2").style.display=="" || document.getElementById("training-type-2").style.display=="none")
        {
          document.getElementById("training-type-2").style.display="block";
          document.getElementById("training-name-2").setAttribute("required","");
          document.getElementById("duration-type-2").setAttribute("required","");
          document.getElementById("price-type-2").setAttribute("required","");

          MaxTrainingType();
          
          return;
        } 
        if(document.getElementById("training-type-3").style.display==""|| document.getElementById("training-type-3").style.display=="none"){
          document.getElementById("training-type-3").style.display="block";
          document.getElementById("training-name-3").setAttribute("required","");
          document.getElementById("duration-type-3").setAttribute("required","");
          document.getElementById("price-type-3").setAttribute("required","");
          MaxTrainingType();
          return;
        }
        if(document.getElementById("training-type-4").style.display==""|| document.getElementById("training-type-4").style.display=="none"){
          document.getElementById("training-type-4").style.display="block";
          document.getElementById("training-name-4").setAttribute("required","");
          document.getElementById("duration-type-4").setAttribute("required","");
          document.getElementById("price-type-4").setAttribute("required","");
          MaxTrainingType();
          return;
        }
        return;
      }
      function MaxTrainingType()
      {
        if(document.getElementById("training-type-4").style.display=="block" && document.getElementById("training-type-3").style.display=="block" && document.getElementById("training-type-2").style.display=="block"){
          
          TrainingTypebt.style.display='none';
        }
      }

      function delTrainingType(trainingTypeId, nameId,durationId,priceId){
        
        document.getElementById(nameId).value="";
        document.getElementById(durationId).value="";
        document.getElementById(priceId).value="";
        document.getElementById(trainingTypeId).style.display='none';

        document.getElementById(nameId).removeAttribute("required");
        document.getElementById(durationId).removeAttribute("required");
        document.getElementById(priceId).removeAttribute("required");
        
        TrainingTypebt.style.display='block';
      }
      

    </script>
  </body>
</html>